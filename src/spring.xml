<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	<bean id="triangle" class="org.rajesh.springjb.Triangle" autowire="byName" >
	</bean>
	<!-- "byName" will work here condition is pointA from bean should be matched with bean id ,then spring will detect the bean -->
	<!-- byType will work if a bean has single ref variable of unique type.. here in this case pointA, pointB,pointC are having same type so for spring it is not possible to detech which one is to be wired -->
	<bean id="pointA" class="org.rajesh.springjb.Point">
		<property name="x" value="0"></property>
		<property name="y" value="0"></property>
	</bean>

	<bean id="pointB" class="org.rajesh.springjb.Point">
		<property name="x" value="-20"></property>
		<property name="y" value="0"></property>
	</bean>
	
	<bean id="pointC" class="org.rajesh.springjb.Point">
		<property name="x" value="20"></property>
		<property name="y" value="0"></property>
	</bean>
	
	
</beans>